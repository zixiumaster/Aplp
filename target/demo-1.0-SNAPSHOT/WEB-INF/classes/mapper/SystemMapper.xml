<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace要与接口类名对应 -->
<mapper namespace="xyz.zixiu.demo.dao.system.SystemMapper">

    <!-- id要与接口类内的方法名对应，parameterType要与方法的参数类型对应 -->

    <select id="CheckSchool" resultType ="java.lang.Integer">
        select COUNT(*)
        from SCHEMATA
        where SCHEMA_NAME = 'aplp_school'
    </select>

    <update id="CreateSchool" >
        create database aplp_school
    </update>

    <delete id="DropSchool" >
        drop database aplp_school
    </delete>


</mapper>