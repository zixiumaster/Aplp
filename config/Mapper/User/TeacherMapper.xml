<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace要与接口类名对应 -->
<mapper namespace="xyz.zixiu.aplp.Dao.User.TeacherMapper">

    <!-- id要与接口类内的方法名对应，parameterType要与方法的参数类型对应 -->
    <insert id="saveTeacher" parameterType="xyz.zixiu.aplp.Bean.User.SignBean" >
        insert INTO user_teacher(
            id,name,phone,email,password
        )values(
            #{id},#{name},#{phone},#{email},#{password}
        )
    </insert>

    <select id="selectTeacherBySign" resultType="xyz.zixiu.aplp.Bean.User.TeacherBean" parameterType="xyz.zixiu.aplp.Bean.User.SignBean">
        select * from user_teacher where ${basis}=#{id} and password=#{password}
    </select>

    <update id="updateTeacherbyUserBean" parameterType="xyz.zixiu.aplp.Bean.User.SignBean">
        update user_teacher set id=#{id},name=#{name},phone=#{phone},email=#{email} where ${basis}=#{attachment}
    </update>

    <update id="updateTeacherPasswordbyUserBean" parameterType="xyz.zixiu.aplp.Bean.User.SignBean">
        update user_teacher set password=#{password} where ${basis}=#{id}
    </update>

</mapper>